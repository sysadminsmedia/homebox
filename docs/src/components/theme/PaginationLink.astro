---
interface Props {
  label: string;
  href: string;
  rel: 'next' | 'prev';
  side: 'left' | 'right';
}

const { label, href, rel, side } = Astro.props;
---

<a
  href={href}
  rel={rel}
  data-side={side}
  class:list={[
    'flex items-center gap-2 rounded-lg px-4 py-2.5 font-medium no-underline transition-colors',
    'text-[var(--color-muted-foreground)] hover:text-[var(--color-foreground)] hover:bg-[var(--color-muted)]',
    'focus:outline-none focus:ring-2 focus:ring-[var(--color-ring)]',
    rel === 'prev' ? 'flex-row-reverse' : 'flex-row',
  ]}
>
  <span>{label}</span>

  <span class="block min-w-[1.25rem] min-h-[1.25rem]">
    {side === 'right' ? (
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em" aria-hidden="true" class="w-full h-full">
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 18l6-6l-6-6" />
      </svg>
    ) : (
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em" aria-hidden="true" class="w-full h-full">
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 18l-6-6l6-6" />
      </svg>
    )}
  </span>
</a>
